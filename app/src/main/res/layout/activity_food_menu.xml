<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodMenuActivity">


    <ImageView
        android:id="@+id/navigation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/navigate_back"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/foodMenuTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Menu"
        android:fontFamily="@font/overlock"
        android:layout_marginStart="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/navigation_back"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/LossWeightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/just_me_again"
        android:text="Loss Weight"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodMenuTV" />


    <EditText
        android:id="@+id/lossWeightET"
        android:layout_width="364dp"
        android:layout_height="127dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toBottomOf="@id/LossWeightTV"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/GainWeightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/just_me_again"
        android:text="Gain Weight"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lossWeightET" />


    <EditText
        android:id="@+id/GainWeightET"
        android:layout_width="360dp"
        android:layout_height="129dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toBottomOf="@id/GainWeightTV"
        tools:layout_editor_absoluteX="22dp" />

    <TextView
        android:id="@+id/StayTheSameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/just_me_again"
        android:text="Stay the Same"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GainWeightET" />

    <EditText
        android:id="@+id/StayTheSameET"
        android:layout_width="362dp"
        android:layout_height="124dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toBottomOf="@id/StayTheSameTV"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>